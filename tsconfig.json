{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "@typechain": ["typechain/index"],
        "@utils": ["test/utils/index"],
        "@e2e/*": ["test/e2e/*"],
        "@unit/*": ["test/unit/*"]
      }
    },
    "exclude": ["dist", "node_modules"],
    "include": ["./test", "./contracts", "./scripts"],
    "files": ["hardhat.config.ts"]
}
  